  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug via NPM",
      "request": "launch",
      "runtimeArgs": ["run", "start:dev"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "Docker: Attach to node",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "skipFiles": ["${worspaceFolder}/<node_internals>/**"],
      "remoteRoot": "/app",
      "protocol": "inspector"
    },
  ]
}
